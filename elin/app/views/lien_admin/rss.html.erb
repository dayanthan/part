xml.instruct!

xml.rss "version" => "2.0", "xmlns:dc" => "http://purl.org/dc/elements/1.1/" do
 xml.channel do

   xml.title       "Lienmaker Recent liens"
   xml.link        url_for :only_path => false, :controller => 'lien'
   xml.description "Lienmaker's most current liens"

   @liens.each do |lien|
     xml.item do
       xml.title       lien.patient_first + ", " + lien.patient_last
       xml.link        url_for :only_path => false, :controller => 'lien', :action => 'patient', :id => lien.id
       xml.description "No Attorney" if lien.patient_attorney_name == " "
       xml.guid        url_for :only_path => false, :controller => 'lien', :action => 'patient', :id => lien.id
     end
   end

 end
end