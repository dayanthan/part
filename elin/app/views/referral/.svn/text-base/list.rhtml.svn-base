<br clear="all">
<h2>Referrals</h2>
<br>
<table width="300px">
	<th align="left">Patient Name</th><th align="left">Referrer</th>
	
		<% for referral in @referrals %>
		<tr>
			<td><%= link_to referral.patient_first + " " + referral.patient_last, :action => :show, :id => referral.id %></td>
			<td><%= User.find_by_id(referral.referrer_id).clinic %></td>
			<td><%= link_to "Add", :action => "add", :id => referral.id %></td>
			<td><%= link_to 'Dismiss', :action => :delete, :id => referral.id %>
		</tr>
		<% end %>
		
		</table>