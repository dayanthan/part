	<body> 
		<div id="container">
		
			<div id="header" style="text-align:left"> 
				
				
			</div> 
			<div id="top_ad" style="text-align:center;margin:5px auto;">
				

			</div>
		
			<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
			<div id="content"> 

				<div id="contentContainer">
<br clear="all">
<h1>Your Insurance Companies</h1>
<% @companies.each do |c| %>
	<%= c.name %><br>
	<%= c.address %><br>
	<%= c.city %>, <%= c.state %>, <%= c.zip %><br>
	<%=link_to "Edit", :action => :edit, :id => c.id%> | <%=link_to "Delete", {:action => :destroy, :id => c.id}, :confirm => "All liens using this company will lose it's insurance information!  Are you sure you want to delete?  " %>
	<br>
	This company is used in <b><%= Lien.count(:conditions => 'user_id = ' + session[:user].id.to_s + ' AND (patient_insurance_company  = ' + c.id.to_s + ' OR defendant_insurance_company  = ' + c.id.to_s + ' OR other_insurance_company  = ' + c.id.to_s + " )")%></b> lien(s)
	<br><br>
	<%end%>
	<br><br>
	<%=link_to "Add New", :action => :new%>
	<br><br>
	<%= link_to "Back to Lien", :controller => "lien", :action => "patient", :id => session[:back_to_lien]%>